{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./scripts",
    "rootDirs": ["./ts", "./scripts/login"],
    "removeComments": true,
  },
  "include": ["./ts/**/*", "./scripts/**/*", "./ts/**/*.ts"],
  "exclude": ["./js"]
}
